{
  "name": "tob-web",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/bcgov/TheOrgBook.git"
  },
  "description": "TheOrgBook web interface component",
  "license": "Apache-2.0",
  "scripts": {
    "ng": "ng",
    "dev": "run-p --print-label --silent start watch-theme",
    "start": "node build-theme.js && node --trace-warnings ./node_modules/\\@angular/cli/bin/ng serve --host 0.0.0.0 --port 8080 --base-href ${NG_BASE_HREF:-/} --deploy-url ${NG_DEPLOY_URL:-/} --configuration ${NG_ENV:-dev} --poll 2000",
    "build": "node build-theme.js && ng build --prod --base-href ${NG_BASE_HREF:-/} --deploy-url ${NG_DEPLOY_URL:-/} ${NG_BUILD_FLAGS:-}",
    "watch-theme": "node watch-theme.js",
    "inspect": "node build-theme.js && node --inspect=${DEBUG_PORT-9229} --debug-brk -- node_modules/\\@angular/cli/bin/ng serve -o --base-href ${NG_BASE_HREF:-/} --deploy-url ${NG_DEPLOY_URL:-/} --configuration ${NG_ENV:-dev}\"",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "dependencies": {
    "@angular/animations": "~6.1.0",
    "@angular/common": "~6.1.0",
    "@angular/compiler": "~6.1.0",
    "@angular/core": "~6.1.0",
    "@angular/forms": "~6.1.0",
    "@angular/http": "~6.1.0",
    "@angular/platform-browser": "~6.1.0",
    "@angular/platform-browser-dynamic": "~6.1.0",
    "@angular/router": "~6.1.0",
    "@bcgov/bootstrap-theme": "https://github.com/cywolf/bootstrap-theme/releases/download/v4.1.0-rc0/bcgov-bootstrap-theme-4.1.0-rc0.tgz",
    "@ng-bootstrap/ng-bootstrap": "^3.0.0",
    "@ngx-translate/core": "^10.0.0",
    "@ngx-translate/http-loader": "^3.0.0",
    "bootstrap": "~4.3.1",
    "compare-versions": "~3.1.0",
    "core-js": "~2.5.4",
    "font-awesome": "^4.7.0",
    "localize-router": "https://github.com/cywolf/localize-router/releases/download/v2.0.0-RC.2/localize-router-2.0.0-RC.2.tgz",
    "localize-router-http-loader": "~1.0.2",
    "rxjs": "~6.3.0",
    "rxjs-compat": "^6.0.0",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.9",
    "@angular-devkit/build-optimizer": "~0.6.8",
    "@angular/cli": "^6.2.0",
    "@angular/compiler-cli": "^7.2.6",
    "@types/jasmine": "~2.8.6",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.4.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "^1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "^4.1.5",
    "protractor": "^5.4.2",
    "ts-node": "~5.0.1",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1",
    "webpack": "~4.4.0"
  }
}
